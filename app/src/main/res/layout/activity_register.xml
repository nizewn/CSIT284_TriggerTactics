<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:windowSoftInputMode="adjustResize"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="169dp"
        android:layout_height="179dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewProfileEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/tt" />

    <TextView
        android:id="@+id/textViewProfileEmail"
        android:layout_width="174dp"
        android:layout_height="56dp"
        android:layout_marginTop="196dp"
        android:fontFamily="sans-serif-black"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="342dp"
        android:layout_height="254dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateAcc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfileEmail"
        app:layout_constraintVertical_bias="0.5">

        <EditText
            android:id="@+id/registerDisplayName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_gray"
            android:ems="10"
            android:hint="Display name"
            android:inputType="text"

            android:padding="32px"
            android:textColor="@color/white"
            android:textColorHint="#5E5E5E" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/registerEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_gray"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:padding="32px"
            android:textColor="@color/white"
            android:textColorHint="#5E5E5E" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/registerPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_gray"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="32px"
            android:textColor="@color/white"
            android:textColorHint="#5E5E5E" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/registerConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_gray"

            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="32px"
            android:textColor="@color/white"
            android:textColorHint="#5E5E5E" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Already have an account? Log in"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateAcc"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnCreateAcc"
        android:layout_width="341dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_red"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:iconTint="#A63030"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>

